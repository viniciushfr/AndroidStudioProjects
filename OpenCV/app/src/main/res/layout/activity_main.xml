<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vinicius.opencv.MainActivity"
    xmlns:opencv="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        tools:layout_editor_absoluteY="521dp"
        tools:layout_editor_absoluteX="161dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btn_storage"
        android:layout_alignLeft="@+id/btn_storage"
        android:layout_alignStart="@+id/btn_storage" />

    <Button
        android:id="@+id/btn_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galeria"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/btn_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp" />

    <Button
        android:id="@+id/btn_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_camera"
        android:layout_alignRight="@+id/btn_camera"
        android:layout_centerVertical="true"
        android:text="Config" />

</RelativeLayout>
